<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/list_item_image_view_album"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="false"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/image_200" />



        <TextView
            android:layout_toRightOf="@id/list_item_image_view_album"
            android:id="@+id/list_item_text_view_top_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:layout_below="@id/list_item_text_view_top_tracks"
            android:layout_alignLeft="@id/list_item_text_view_top_tracks"
            android:id="@+id/list_item_text_view_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textAppearance="?android:textAppearanceSmall" />


</RelativeLayout>